<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <% @page_title = "投稿一覧" %>
      <h1 class="title"><%= @page_title %></h1>
    </div>
  </div>
</section>  

<%= will_paginate @collection, renderer: BulmaPagination::Rails %>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @posts.each do |post| %>
        <div class="column is-3">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <%= link_to post_path(post) do %>
                  <%= attachment_image_tag post, :image %>
                <% end %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-48x48">
                    <%= link_to user_path(post.user.id) do %>
                      <%= image_tag attachment_url(post.user, :profile_image, :fill, 156, 109.375, fallback: "no-image.jpeg") %>
                    <% end %>
                  </figure>
                </div>
                
                <div class="media-content">
                  <div class="title"><%= link_to post.user.name, user_path(post.user.id) %></div>
                </div>
              </div> 
              
              <div class="content">
                <time><%= post.updated_at.strftime("%Y/%m/%d %H:%M") %></time>更新
              </div>
            </div>
          </div>
        </div>  
      <% end %>
    </div>
  </div>
</section>  

<%= will_paginate @collection, renderer: BulmaPagination::Rails %>

<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <% @page_title = "ユーザー一覧" %>
      <h1 class="title"><%= @page_title %></h1>
    </div>
  </div>
</section>  

<%= will_paginate @collection, renderer: BulmaPagination::Rails %>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @users.each do |user| %>
        <div class="column is-3">
          <div class="card">
            <div class="card-content">
              <div class="card-image">
                <figure class="image">
                  <%= link_to user_path(user) do %>
                    <%= image_tag attachment_url(user, :profile_image, :fill, 156, 109.375, fallback: "no-image.jpeg") %>
                  <% end %>
                </figure>
              </div>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <div class="title"><%= link_to user.name, user_path(user) %></div>
                </div>
              </div>
              <div class="content">
                投稿数：<%= user.posts.count %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<%= will_paginate @collection, renderer: BulmaPagination::Rails %>
